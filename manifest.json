{
  "manifest_version": 3,
  "name": "Hardcore Refresh",
  "version": "1.1.2",
  "description": "Clear localStorage, sessionStorage, IndexedDB, Cache, Service Workers, then reload with feedback and custom shortcuts.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "unlimitedStorage",
    "cookies"
],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Hardcore Refresh",
    "default_icon": {
      "16": "logo-v2.png",
      "48": "logo-v2.png",
      "128": "logo-v2.png"
    }
  },
  "commands": {
    "refresh-with-clear": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Clear storage and reload the page"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "logo-v2.png",
    "48": "logo-v2.png",
    "128": "logo-v2.png"
  }
}
